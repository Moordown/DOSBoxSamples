SELECT SALESMAN.NAME, INVOICES.ITOTAL, CUSTOMER.COMPANY,;
  CUSTOMER.CONTACT, CUSTOMER.PHONE;
 FROM CUSTOMER, INVOICES, SALESMAN;
 WHERE INVOICES.CNO = CUSTOMER.CNO;
   AND SALESMAN.ONO = CUSTOMER.ONO;
   AND INVOICES.ITOTAL > 2500;
 ORDER BY SALESMAN.NAME, INVOICES.ITOTAL DESCENDING;
 INTO CURSOR SAMPLE
BROWSE NOMODIFY
