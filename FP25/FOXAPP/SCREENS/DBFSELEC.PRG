      DO relselec.spr WITH m.newdbf, m.childdbf, m.childfld, m.parentfld, ;
         m.igncase, m.relstr, m.parentdbf, .T.

      IF !EMPTY(m.childfld)  && true unless user cancelled RelSelec
         * Open the new child database
         IF USED(m.newdbf)
            SELECT (m.newdbf)
         ELSE
            SELECT 0
            USE (m.childdbf)
         ENDIF

